<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GameBox Dashboard</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/core-badges.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body>
    <div class="app-container">
        <!-- SIDEBAR -->
        <aside class="sidebar">
            <div class="logo">
                <i class="fa-solid fa-gamepad"></i>
                <h1>GameBox</h1>
            </div>
            <nav>
                <ul>
                    <li class="active" data-page="home">
                        <i class="fa-solid fa-house"></i> 🏠 Home
                    </li>
                    <li data-page="games">
                        <i class="fa-solid fa-list"></i> 🎮 Jogos
                    </li>
                    <li data-page="trading">
                        <i class="fa-solid fa-handshake"></i> 🤝 Trocas
                    </li>
                    <li data-page="management">
                        <i class="fa-solid fa-users-gear"></i> 👥 Gestão
                    </li>
                    <li data-page="settings">
                        <i class="fa-solid fa-gear"></i> ⚙️ Configurações
                    </li>
                </ul>
            </nav>
            <div class="bot-status-card">
                <div class="status-wrapper">
                    <img id="bot-status-image" src="" alt=""
                        style="width: 50px; height: 50px; border-radius: 50%; object-fit: cover; display: none; border: 2px solid var(--border);">
                    <div class="status-indicator" id="bot-status-indicator"></div>
                </div>
                <span id="bot-status-text">🔴 Desconectado</span>
            </div>
        </aside>

        <main class="content">
            <!-- HOME PAGE -->
            <div id="home" class="page active">
                <header>
                    <h2>📊 Dashboard</h2>
                    <div>
                        <button class="btn primary hidden" id="btn-connect">
                            <i class="fa-solid fa-plug"></i> Conectar Bot
                        </button>
                        <button class="btn danger hidden" id="btn-disconnect">
                            <i class="fa-solid fa-plug-circle-xmark"></i> Desconectar
                        </button>
                    </div>
                </header>

                <div class="stats-grid">
                    <div class="card stat-card">
                        <i class="fa-solid fa-users"></i>
                        <div class="info">
                            <h3>👥 Usuários Ativos</h3>
                            <p id="stat-users">0</p>
                        </div>
                    </div>
                    <div class="card stat-card">
                        <i class="fa-solid fa-gamepad"></i>
                        <div class="info">
                            <h3>🎮 Total de Jogos</h3>
                            <p id="stat-games">0</p>
                        </div>
                    </div>
                    <div class="card stat-card">
                        <i class="fa-solid fa-box-open"></i>
                        <div class="info">
                            <h3>📦 Caixas Abertas</h3>
                            <p id="stat-boxes">0</p>
                        </div>
                    </div>
                </div>

                <div class="card recent-activity">
                    <h3>📝 Atividade Recente</h3>
                    <div class="filters" style="display: flex; gap: 10px;">
                        <input type="text" id="search-games" placeholder="🔍 Buscar jogo..." style="width: 250px;">
                        <select id="filter-rarity">
                            <option value="">🎯 Todas as Raridades</option>
                            <option value="E">E - Comum</option>
                            <option value="D">D - Incomum</option>
                            <option value="C">C - Raro</option>
                            <option value="B">B - Épico</option>
                            <option value="A">A - Lendário</option>
                            <option value="S">S - Mítico</option>
                            <option value="SS">SS - Ultra Raro</option>
                            <option value="SSS">SSS - Supremo</option>
                        </select>
                    </div>
                </div>

                <div class="table-container">
                    <table id="games-table">
                        <thead>
                            <tr>
                                <th>#️⃣ ID</th>
                                <th>🎮 Nome</th>
                                <th>⭐ Raridade</th>
                                <th>🕹️ Console</th>
                                <th>📅 Ano</th>
                                <th>🔧 Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Populated by JS -->
                        </tbody>
                    </table>
                </div>
            </div>
    </div>

    <!-- TRADING PAGE -->
    <div id="trading" class="page">
        <header>
            <h2>🤝 Sistema de Trocas</h2>
        </header>

        <div class="card">
            <h3>⚙️ Configurações de Troca</h3>
            <div class="form-group">
                <label class="toggle-switch">
                    <input type="checkbox" id="trading-enabled">
                    <span class="slider"></span>
                    <span class="label">Habilitar Sistema de Trocas</span>
                </label>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label>Custo por Troca (Coins)</label>
                    <input type="number" id="trade-cost" value="50">
                </div>
                <div class="form-group">
                    <label>Mínimo de Coins Requerido</label>
                    <input type="number" id="trade-min-coins" value="100">
                </div>
                <div class="form-group">
                    <label>Cooldown (segundos)</label>
                    <input type="number" id="trade-cooldown" value="60">
                </div>
            </div>
            <button class="btn primary" id="btn-save-trade-config">Salvar Configurações</button>
        </div>

        <div class="card mt-2" style="margin-top: 20px;">
            <h3>📜 Histórico de Trocas Recentes</h3>
            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Data</th>
                            <th>Iniciador</th>
                            <th>Alvo</th>
                            <th>Jogo Enviado</th>
                            <th>Jogo Recebido</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="trades-table-body">
                        <!-- Rows populated by JS -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- MANAGEMENT PAGE -->
    <div id="management" class="page">
        <header>
            <h2>👥 Gestão do Sistema</h2>
        </header>

        <!-- Users Section -->
        <div class="card" style="margin-bottom: 30px;">
            <div class="card-header"
                style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                <h3>👤 Usuários</h3>
                <div class="filters" style="margin: 0;">
                    <input type="text" id="search-users" placeholder="🔍 Buscar usuário..." style="width: 250px;">
                </div>
            </div>

            <div class="table-container">
                <table id="users-table">
                    <thead>
                        <tr>
                            <th>👤 Usuário</th>
                            <th>💰 Moedas</th>
                            <th>📦 Caixas</th>
                            <th>🎮 Jogos (XP)</th>
                            <th>📊 Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Populated by JS -->
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Commands Section -->
        <div class="card">
            <div class="card-header"
                style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                <h3>⌨️ Comandos do Bot</h3>
                <button class="btn primary small" id="btn-add-command">
                    <i class="fa-solid fa-plus"></i> ➕ Criar Comando
                </button>
            </div>

            <div class="table-container">
                <table id="commands-table">
                    <thead>
                        <tr>
                            <th>💬 Comando</th>
                            <th>📋 Tipo</th>
                            <th>📝 Descrição</th>
                            <th>🔐 Nível</th>
                            <th>⏱️ Cooldown</th>
                            <th>✅ Status</th>
                            <th>🔧 Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Populated by JS -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- SETTINGS PAGE -->
    <div id="settings" class="page">
        <header>
            <h2>⚙️ Configurações</h2>
        </header>

        <div class="card">
            <h3>🤖 Bot Twitch</h3>
            <div class="form-row">
                <div class="form-group">
                    <label>Nome do Bot</label>
                    <input type="text" id="conf-bot-name" placeholder="Ex: GameBoxBot">
                </div>
                <div class="form-group">
                    <label>Token OAuth (oauth:xxxx)</label>
                    <input type="password" id="conf-token" placeholder="oauth:...">
                </div>
            </div>
            <div class="form-group">
                <label>Canais (separados por vírgula)</label>
                <input type="text" id="conf-channel" placeholder="Ex: canal1, canal2">
            </div>
        </div>

        <div class="card mt-2">
            <h3>💰 Economia</h3>
            <div class="form-row">
                <div class="form-group">
                    <label>Nome da Moeda</label>
                    <input type="text" id="conf-currency" placeholder="Ex: Coins">
                </div>
                <div class="form-group">
                    <label>Preço da Caixa</label>
                    <input type="number" id="conf-price" value="100">
                </div>
            </div>

            <h4 style="margin-top: 15px; margin-bottom: 10px; color: var(--text-muted);">⏱️ Timer Automático
            </h4>
            <div class="form-row">
                <div class="form-group">
                    <label>Intervalo (segundos)</label>
                    <input type="number" id="conf-timer-interval" value="600">
                </div>
                <div class="form-group">
                    <label>Quantidade por Timer</label>
                    <input type="number" id="conf-timer-amount" value="50">
                </div>
            </div>

            <h4 style="margin-top: 15px; margin-bottom: 10px; color: var(--text-muted);">🎁 Recompensas de
                Engajamento</h4>
            <div class="form-row">
                <div class="form-group">
                    <label>Por Sub</label>
                    <input type="number" id="conf-sub-amount" value="500">
                </div>
                <div class="form-group">
                    <label>Por Gift Sub</label>
                    <input type="number" id="conf-gift-amount" value="250">
                </div>
                <div class="form-group">
                    <label>Por Bit</label>
                    <input type="number" id="conf-bit-amount" value="1">
                </div>
            </div>
        </div>

        <div class="card mt-2">
            <h3>☁️ Integração IGDB</h3>
            <div class="form-row">
                <div class="form-group">
                    <label>Client ID</label>
                    <input type="text" id="conf-igdb-id">
                </div>
                <div class="form-group">
                    <label>Client Secret</label>
                    <input type="password" id="conf-igdb-secret">
                </div>
            </div>
        </div>

        <div class="card mt-2">
            <h3>📈 Tabela de Níveis (XP)</h3>
            <div class="table-container">
                <table id="levels-table">
                    <thead>
                        <tr>
                            <th>Nível</th>
                            <th>XP Necessário</th>
                            <th>Título</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody id="levels-table-body">
                        <!-- Populated by JS -->
                    </tbody>
                </table>
                <button class="btn secondary small" id="btn-add-level" style="margin-top: 10px;">
                    <i class="fa-solid fa-plus"></i> Adicionar Nível
                </button>
            </div>
        </div>

        <div class="card mt-2 danger-zone">
            <h3>🚨 Zona de Perigo</h3>
            <p>Ações irreversíveis. Cuidado!</p>
            <button class="btn danger" id="btn-reset-database">
                <i class="fa-solid fa-skull"></i> Resetar Banco de Dados
            </button>
        </div>

        <div class="actions-bar">
            <button class="btn primary" id="btn-save-settings">
                <i class="fa-solid fa-save"></i> Salvar Configurações
            </button>
        </div>
    </div>
    </main>
    </div>

    <!-- MODALS (simplified versions) -->
    <div id="game-modal" class="modal hidden">
        <div class="modal-content">
            <h3 id="modal-title">Adicionar Jogo</h3>
            <form id="game-form">
                <input type="hidden" id="game-id">
                <div class="form-group">
                    <label>Nome do Jogo</label>
                    <input type="text" id="game-name" required>
                </div>
                <div class="form-group">
                    <label>Raridade</label>
                    <select id="game-rarity">
                        <option value="E">E - Comum</option>
                        <option value="D">D - Incomum</option>
                        <option value="C">C - Raro</option>
                        <option value="B">B - Épico</option>
                        <option value="A">A - Lendário</option>
                        <option value="S">S - Mítico</option>
                        <option value="SS">SS - Ultra Raro</option>
                        <option value="SSS">SSS - Supremo</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Console</label>
                    <input type="text" id="game-console">
                </div>
                <div class="form-group">
                    <label>Ano</label>
                    <input type="number" id="game-year">
                </div>
                <div class="modal-actions">
                    <button type="button" class="btn" onclick="closeModal()">Cancelar</button>
                    <button type="submit" class="btn primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>

    <div id="command-modal" class="modal hidden">
        <div class="modal-content">
            <h3 id="command-modal-title">Criar Comando</h3>
            <form id="command-form">
                <input type="hidden" id="cmd-name-original">
                <input type="hidden" id="cmd-is-editing">
                <div class="form-group">
                    <label>Comando</label>
                    <input type="text" id="cmd-name" placeholder="!comando" required>
                </div>
                <div class="form-group">
                    <label>Descrição</label>
                    <input type="text" id="cmd-description">
                </div>
                <div class="form-group" id="cmd-response-group">
                    <label>Resposta</label>
                    <textarea id="cmd-response" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label>Aliases</label>
                    <input type="text" id="cmd-aliases" placeholder="!alias1, !alias2">
                </div>
                <div class="form-group">
                    <label>Cooldown (s)</label>
                    <input type="number" id="cmd-cooldown" value="3">
                </div>
                <div class="form-group">
                    <label>Permissão</label>
                    <select id="cmd-level">
                        <option value="viewer">Viewer</option>
                        <option value="admin">Admin</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>
                        <input type="checkbox" id="cmd-enabled" checked> Habilitado
                    </label>
                </div>
                <div class="modal-actions">
                    <button type="button" class="btn" onclick="closeCommandModal()">Cancelar</button>
                    <button type="submit" class="btn primary">Salvar</button>
                    <button type="button" class="btn danger hidden" id="btn-delete-command">Deletar</button>
                </div>
            </form>
        </div>
    </div>

    <div id="user-modal" class="modal hidden">
        <div class="modal-content">
            <h3 id="user-modal-title">Usuário</h3>
            <div id="user-stats-content"></div>
            <div class="modal-actions">
                <button class="btn" onclick="closeUserModal()">Fechar</button>
            </div>
        </div>
    </div>

    <div id="igdb-modal" class="modal hidden">
        <div class="modal-content" style="max-width: 800px;">
            <h3>☁️ Importar do IGDB</h3>
            <div class="form-group" style="display: flex; gap: 10px;">
                <input type="text" id="igdb-search-input" placeholder="Digite o nome do jogo..." style="flex: 1;">
                <button class="btn primary" id="btn-igdb-search">
                    <i class="fa-solid fa-search"></i> Buscar
                </button>
            </div>
            <div class="table-container" style="max-height: 400px; overflow-y: auto;">
                <table id="igdb-results-table">
                    <thead>
                        <tr>
                            <th>Capa</th>
                            <th>Nome</th>
                            <th>Plataformas</th>
                            <th>Ano</th>
                            <th>Nota</th>
                            <th>Ação</th>
                        </tr>
                    </thead>
                    <tbody id="igdb-results-body"></tbody>
                </table>
                <div id="igdb-loading" class="hidden" style="text-align: center; padding: 20px;">
                    <i class="fa-solid fa-spinner fa-spin fa-2x"></i>
                </div>
            </div>
            <div class="modal-actions">
                <button class="btn" onclick="closeIgdbModal()">Fechar</button>
            </div>
        </div>
    </div>

    <script src="js/app.js"></script>
</body>

</html>